/* ===== Neo-Brutalism快速操作 ===== */
.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-btn {
  background: #FFFFFF;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
  padding: 32rpx 20rpx;
  text-align: center;
  transform: rotate(-1deg);
  transition: all 0.2s ease;
}

.action-btn:nth-child(1) {
  background: #A8E6CF;
  transform: rotate(1deg);
}

.action-btn:nth-child(2) {
  background: #FFE66D;
  transform: rotate(-2deg);
}

.action-btn:nth-child(3) {
  background: #4ECDC4;
  transform: rotate(1deg);
}

.action-btn.btn-danger {
  background: #FF6B35;
  transform: rotate(-1deg);
}

.action-btn:hover {
  animation: brutalistShake 0.3s ease;
}

.action-btn:active {
  transform: translate(3rpx, 3rpx);
  box-shadow: 3rpx 3rpx 0 #000000;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 26rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* ===== Neo-Brutalism进度页面 ===== */
.progress-header {
  text-align: center;
  background: #FF6B35;
  color: #FFFFFF;
  transform: rotate(-2deg);
}

.progress-title {
  font-size: 40rpx;
  font-weight: 900;
  text-shadow: 3rpx 3rpx 0 #000000;
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.progress-summary {
  font-size: 28rpx;
  font-weight: 700;
  text-shadow: 2rpx 2rpx 0 #000000;
}

.levels-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.level-card {
  background: #FFFFFF;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
  padding: 32rpx 20rpx;
  text-align: center;
  transform: rotate(-1deg);
  transition: all 0.2s ease;
  cursor: pointer;
}

.level-card.completed {
  background: #A8E6CF;
  transform: rotate(1deg);
}

.level-card.current {
  background: #FFE66D;
  transform: rotate(-2deg);
  animation: brutalistPulse 2s ease-in-out infinite;
}

.level-card.locked {
  background: #E8E8E8;
  opacity: 0.7;
  transform: rotate(0deg);
}

.level-card:hover:not(.locked) {
  animation: brutalistShake 0.3s ease;
}

.level-card:active:not(.locked) {
  transform: translate(3rpx, 3rpx);
  box-shadow: 3rpx 3rpx 0 #000000;
}

