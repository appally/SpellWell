/* pages/statistics/statistics.wxss */
/* Neo-Brutalism儿童APP设计系统 - 统计页面 */
/* 设计DNA: 大胆色彩 + 几何形状 + 高对比度 + 无圆角 + 强烈阴影 + 儿童友好 */

/* ===== 基础页面样式 - 儿童友好简化设计 ===== */
.safe-area {
  min-height: 100vh;
  background: #F8F9FA;
  padding: 24rpx;
  position: relative;
}

/* 简化的背景设计 - 减少视觉干扰 */
.safe-area::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    /* 简单的几何点阵 */
    radial-gradient(circle at 50% 50%, #FFE66D 2px, transparent 2px),
    /* 基础渐变背景 */
    linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  background-size: 
    80px 80px,
    100% 100%;
  background-position:
    0 0,
    0 0;
  opacity: 0.05;
  pointer-events: none;
  z-index: 0;
}

/* ===== Neo-Brutalism头部信息卡片 - 简化设计 ===== */
.header-card {
  background: #4ECDC4;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #FF6B35;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  /* 移除旋转，保持水平对齐 */
  position: relative;
  z-index: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  /* 移除旋转和动画，保持简洁 */
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 8rpx;
  /* 移除大写转换，保持可读性 */
  letter-spacing: 1rpx;
}

.user-level {
  font-size: 24rpx;
  font-weight: 700;
  color: #000000;
  background: #FFFFFF;
  padding: 6rpx 12rpx;
  border: 2rpx solid #000000;
  box-shadow: 2rpx 2rpx 0 #000000;
  display: inline-block;
  /* 移除旋转 */
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  background: #FFE66D;
  border: 3rpx solid #000000;
  box-shadow: 3rpx 3rpx 0 #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  /* 移除旋转 */
  transition: all 0.2s ease;
}

.icon-btn:hover {
  transform: scale(1.05);
}

.icon-btn:active {
  transform: rotate(-5deg) translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 #000000;
}

/* ===== Neo-Brutalism选项卡导航 ===== */
.tab-nav {
  display: flex;
  background: #FFFFFF;
  border: 6rpx solid #000000;
  box-shadow: 8rpx 8rpx 0 #A8E6CF;
  margin-bottom: 32rpx;
  transform: rotate(1deg);
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.tab-item {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 700;
  color: #000000;
  background: #FFFFFF;
  border-right: 4rpx solid #000000;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.tab-item:last-child {
  border-right: none;
}

.tab-item.active {
  background: #FF6B35;
  color: #FFFFFF;
  text-shadow: 2rpx 2rpx 0 #000000;
  transform: scale(1.05);
}

.tab-item:active {
  transform: scale(0.95);
}

/* ===== Neo-Brutalism统计网格 ===== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  background: #FFFFFF;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
  padding: 32rpx 24rpx;
  text-align: center;
  transform: rotate(-2deg);
  transition: all 0.2s ease;
  position: relative;
}

.stat-card:nth-child(1) {
  background: #FFE66D;
  transform: rotate(2deg);
}

.stat-card:nth-child(2) {
  background: #A8E6CF;
  transform: rotate(-1deg);
}

.stat-card:nth-child(3) {
  background: #FF6B35;
  transform: rotate(1deg);
}

.stat-card:nth-child(4) {
  background: #4ECDC4;
  transform: rotate(-3deg);
}

.stat-card:hover {
  animation: brutalistShake 0.3s ease;
}

.stat-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(3rpx 3rpx 0 rgba(0,0,0,0.3));
}

.stat-value {
  font-size: 48rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 8rpx;
  text-shadow: 2rpx 2rpx 0 rgba(255,255,255,0.5);
}

.stat-label {
  font-size: 24rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* ===== Neo-Brutalism卡片通用样式 - 简化设计 ===== */
.card {
  background: #FFFFFF;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #A8E6CF;
  padding: 24rpx;
  margin-bottom: 24rpx;
  /* 移除旋转 */
  position: relative;
  z-index: 1;
  /* 覆盖app.wxss中的圆角设置，保持Neo-Brutalism无圆角风格 */
  border-radius: 0 !important;
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #000000;
  /* 移除大写转换 */
  letter-spacing: 1rpx;
}

