/* ===== Neo-Brutalism加载状态 ===== */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #E8E8E8;
  border-top: 8rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  background: #000000;
  padding: 16rpx 32rpx;
  border: 4rpx solid #FFFFFF;
  box-shadow: 4rpx 4rpx 0 #FFFFFF;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* ===== Neo-Brutalism动画关键帧 ===== */
@keyframes brutalistBounce {
  0%, 100% {
    transform: scale(1) rotate(0deg);
  }
  25% {
    transform: scale(1.05) rotate(-2deg);
  }
  50% {
    transform: scale(0.95) rotate(1deg);
  }
  75% {
    transform: scale(1.02) rotate(-1deg);
  }
}

@keyframes brutalistShake {
  0%, 100% {
    transform: translateX(0) rotate(0deg);
  }
  25% {
    transform: translateX(-4rpx) rotate(-1deg);
  }
  50% {
    transform: translateX(4rpx) rotate(1deg);
  }
  75% {
    transform: translateX(-2rpx) rotate(-0.5deg);
  }
}

@keyframes brutalistPulse {
  0%, 100% {
    transform: rotate(-2deg) scale(1);
    box-shadow: 6rpx 6rpx 0 #000000;
  }
  50% {
    transform: rotate(-1deg) scale(1.05);
    box-shadow: 8rpx 8rpx 0 #000000;
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

