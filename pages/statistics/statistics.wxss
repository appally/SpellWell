  box-shadow: 4rpx 4rpx 0 #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx auto;
  transform: rotate(5deg);
}

.level-theme {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 8rpx;
  text-transform: uppercase;
}

.level-words {
  font-size: 24rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.level-stars {
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

.star {
  font-size: 32rpx;
  opacity: 0.3;
  filter: grayscale(100%);
  transition: all 0.3s ease;
}

.star.filled {
  opacity: 1;
  filter: grayscale(0%) drop-shadow(2rpx 2rpx 0 rgba(0,0,0,0.3));
  animation: brutalistBounce 2s ease-in-out infinite;
}

