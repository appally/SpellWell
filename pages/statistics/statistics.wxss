}

.error-word-item:nth-child(3n) {
  background: #F0F8FF;
}

.error-word-item:hover {
  transform: scale(1.02);
  z-index: 10;
}

.error-word-item:active {
  transform: scale(0.98);
  box-shadow: 2rpx 2rpx 0 #000000;
}

/* 简化：单词显示区域 */
.error-word-info {
  display: block;
  text-align: center;
}

/* 简化：英文单词显示 */
.error-word-english {
  font-size: 28rpx;
  font-weight: 900;
  color: #000000;
  text-transform: lowercase;
  display: block;
  margin-bottom: 6rpx;
}

/* 隐藏复杂信息 */
.error-word-stats {
  display: none;
}

/* 简化：错误次数徽章 */
.error-count {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #FF6B35;
  color: #FFFFFF;
  font-size: 16rpx;
  font-weight: 900;
  padding: 4rpx 8rpx;
  border: 2rpx solid #000000;
  box-shadow: 2rpx 2rpx 0 #000000;
  /* 移除旋转 */
  z-index: 5;
  min-width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* 隐藏复杂信息，保持简洁 */
.error-word-chinese,
.error-word-phonetic,
.error-rate,
.difficulty-tag {
  display: none;
}

/* 可选：为前三名添加特殊样式 */
.error-word-item:nth-child(1) .error-count {
  background: #FFD700;
  color: #000000;
  animation: brutalistPulse 2s ease-in-out infinite;
}

.error-word-item:nth-child(2) .error-count {
  background: #C0C0C0;
  color: #000000;
}

.error-word-item:nth-child(3) .error-count {
  background: #CD7F32;
  color: #FFFFFF;
}

.difficulty-easy {
  background: #A8E6CF;
  color: #000000;
}

.difficulty-medium {
  background: #FFE66D;
  color: #000000;
}

.difficulty-hard {
  background: #FF6B35;
  color: #FFFFFF;
  text-shadow: 1rpx 1rpx 0 #000000;
}

.difficulty-expert {
  background: #8B5CF6;
  color: #FFFFFF;
  text-shadow: 1rpx 1rpx 0 #000000;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  filter: drop-shadow(4rpx 4rpx 0 rgba(0,0,0,0.1));
}

.empty-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 16rpx;
  text-transform: uppercase;
}

.empty-desc {
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  line-height: 1.5;
}

/* 学习建议 */
.error-suggestions {
  background: #F4A6A6;
  transform: rotate(-1deg);
  box-shadow: 8rpx 8rpx 0 #FF6B35;
}

.suggestions-list {
  margin-top: 24rpx;
}

.suggestion-item {
  background: #FFFFFF;
  border: 3rpx solid #000000;
  box-shadow: 3rpx 3rpx 0 #000000;
  padding: 20rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transform: rotate(1deg);
  transition: all 0.2s ease;
}

.suggestion-item:nth-child(even) {
  transform: rotate(-1deg);
}

.suggestion-item:hover {
  animation: brutalistPulse 0.5s ease;
}

.suggestion-icon {
  font-size: 32rpx;
  filter: drop-shadow(2rpx 2rpx 0 rgba(0,0,0,0.2));
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1.4;
}

/* 响应式设计 - 错误分析页面优化 */
@media (max-width: 480px) {
  /* 保持统计项横向排列，但调整间距 */
  .error-stats-grid {
    gap: 12rpx;
  }
  
  .error-stat-item {
    padding: 16rpx 8rpx;
  }
  
  .error-stat-icon {
    font-size: 32rpx;
  }
  
  .error-stat-value {
    font-size: 28rpx;
  }
  
  .error-stat-label {
    font-size: 16rpx;
  }
  
  /* 简化的错误单词项在小屏幕上保持简洁 */
  .error-word-item {
    padding: 16rpx;
    margin-bottom: 10rpx;
  }
  
  .error-word-english {
    font-size: 32rpx;
  }
  
  .error-count {
    font-size: 20rpx;
    padding: 6rpx 12rpx;
  }
  
  .suggestion-item {
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }
}