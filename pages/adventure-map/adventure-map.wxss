/* pages/adventure-map/adventure-map.wxss */
/* Neo-Brutalism儿童APP设计系统 - 优化版冒险地图 */
/* 设计原则: 清晰层次 + 居中布局 + 强化关卡关系 + 减少视觉干扰 */

/* ===== 页面基础布局 ===== */
.adventure-page {
  min-height: 100vh;
  background: #FFFFFF;
  position: relative;
  padding: 0;
  overflow-x: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', sans-serif;
}

/* 丰富的背景纹路设计 */
.paper-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    /* 主要几何纹理 */
    radial-gradient(circle at 25% 25%, #FFE66D 2rpx, transparent 2rpx),
    radial-gradient(circle at 75% 75%, #4ECDC4 2rpx, transparent 2rpx),
    /* 对角线条纹 */
    linear-gradient(45deg, transparent 40%, #A8E6CF 40%, #A8E6CF 42%, transparent 42%),
    linear-gradient(-45deg, transparent 58%, #FF6B35 58%, #FF6B35 60%, transparent 60%),
    /* 网格纹理 */
    linear-gradient(90deg, #F4A6A6 1rpx, transparent 1rpx),
    linear-gradient(0deg, #7FB3D3 1rpx, transparent 1rpx),
    /* 基础渐变背景 */
    linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 50%, #FFFFFF 100%);
  background-size: 
    80rpx 80rpx,
    80rpx 80rpx,
    120rpx 120rpx,
    120rpx 120rpx,
    40rpx 40rpx,
    40rpx 40rpx,
    100% 100%;
  background-position:
    0 0,
    40rpx 40rpx,
    0 0,
    60rpx 60rpx,
    0 0,
    0 0,
    0 0;
  opacity: 0.08;
  pointer-events: none;
  animation: backgroundShift 20s ease-in-out infinite;
}

/* 背景动画效果 */
@keyframes backgroundShift {
  0%, 100% { 
    background-position:
      0 0,
      40rpx 40rpx,
      0 0,
      60rpx 60rpx,
      0 0,
      0 0,
      0 0;
  }
  50% { 
    background-position:
      20rpx 20rpx,
      60rpx 60rpx,
      30rpx 30rpx,
      90rpx 90rpx,
      10rpx 10rpx,
      10rpx 10rpx,
      0 0;
  }
}

/* ===== 简化的地图标题 ===== */
/* ===== 重新设计的地图标题区域 ===== */
.map-header {
  text-align: center;
  padding: 40rpx 32rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

/* ===== 装饰性顶部元素 ===== */
.header-decoration-top {
  display: flex;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 16rpx;
}

.deco-star {
  font-size: 48rpx;
  animation: starTwinkle 2s ease-in-out infinite;
  filter: drop-shadow(2rpx 2rpx 4rpx rgba(255, 107, 53, 0.3));
}

.deco-compass {
  font-size: 64rpx;
  animation: compassSpin 8s linear infinite;
  filter: drop-shadow(4rpx 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

/* ===== 主标题容器 ===== */
.title-container {
  position: relative;
  margin: 16rpx 0;
}

.main-title {
  background: #4ECDC4;
  border: 8rpx solid #000000;
  box-shadow: 16rpx 16rpx 0 #FF6B35;
  padding: 32rpx 48rpx;
  transform: rotate(-2deg);
  position: relative;
  overflow: hidden;
}

.main-title::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
  animation: shimmer 3s ease-in-out infinite;
}

.title-text {
  font-size: 72rpx;
  font-weight: 900;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  line-height: 1.1;
  margin-bottom: 8rpx;
}

.title-english {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  opacity: 0.8;
}

/* ===== 副标题容器 ===== */
.subtitle-container {
  margin: 16rpx 0;
}

.subtitle {
  background: #FFE66D;
  border: 4rpx solid #000000;
  box-shadow: 8rpx 8rpx 0 #000000;
  padding: 20rpx 32rpx;
  transform: rotate(1deg);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subtitle-icon {
  font-size: 32rpx;
  animation: iconBounce 2s ease-in-out infinite;
}

.subtitle-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* ===== 装饰性底部元素 ===== */
.header-decoration-bottom {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-top: 16rpx;
}

.deco-line {
  width: 80rpx;
  height: 6rpx;
  background: #000000;
  border-radius: 3rpx;
  box-shadow: 0 4rpx 0 #FF6B35;
}

.deco-gem {
  font-size: 40rpx;
  animation: gemGlow 2.5s ease-in-out infinite;
  filter: drop-shadow(2rpx 2rpx 6rpx rgba(78, 205, 196, 0.4));
}

/* ===== 动画效果 ===== */
@keyframes starTwinkle {
  0%, 100% { transform: scale(1) rotate(0deg); opacity: 1; }
  50% { transform: scale(1.2) rotate(180deg); opacity: 0.7; }
}

@keyframes compassSpin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

@keyframes iconBounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

@keyframes gemGlow {
  0%, 100% { transform: scale(1); filter: drop-shadow(2rpx 2rpx 6rpx rgba(78, 205, 196, 0.4)); }
  50% { transform: scale(1.1); filter: drop-shadow(4rpx 4rpx 12rpx rgba(78, 205, 196, 0.6)); }
}

/* ===== 地图容器优化 ===== */
.map-scroll-container {
  flex: 1;
  position: relative;
  padding: 0 32rpx 40rpx 32rpx;
}

.map-scroll {
  height: calc(100vh - 280rpx);
  width: 100%;
}

/* ===== 关卡容器 - 居中对齐 ===== */
.levels-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40rpx 32rpx;
  padding: 40rpx 20rpx;
  justify-items: center;
  max-width: 600rpx;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

/* ===== 关卡节点 - 增强视觉层次 ===== */
.level-node {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
  transform-origin: center;
}

/* 关卡状态的视觉差异化 */
.level-completed {
  transform: scale(1) rotate(-1deg);
  opacity: 1;
}

.level-current {
  transform: scale(1.08) rotate(1deg);
  z-index: 10;
  animation: currentLevelPulse 2s ease-in-out infinite;
}

.level-locked {
  transform: scale(0.9) rotate(0deg);
  opacity: 0.6;
  filter: grayscale(50%);
}

/* ===== 关卡圆环设计 ===== */
.level-ring {
  width: 120rpx;
  height: 120rpx;
  border: 6rpx solid #000000;
  box-shadow: 8rpx 8rpx 0 #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 8rpx;
  transition: all 0.2s ease;
}

.level-ring-completed {
  background: #A8E6CF;
  box-shadow: 8rpx 8rpx 0 #4ECDC4;
}

.level-ring-current {
  background: #FFE66D;
  box-shadow: 8rpx 8rpx 0 #FF6B35;
  border-width: 8rpx;
}

.level-ring-locked {
  background: #E8E8E8;
  box-shadow: 8rpx 8rpx 0 #C0C0C0;
}

/* ===== 关卡图标 ===== */
.level-icon-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.level-icon {
  font-size: 56rpx;
  filter: drop-shadow(2rpx 2rpx 0 rgba(0,0,0,0.3));
}

/* ===== 状态指示器 ===== */
.level-status-indicator {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 48rpx;
  height: 48rpx;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(15deg);
}

.status-icon {
  font-size: 28rpx;
}

.current-pulse {
  animation: iconPulse 1.5s ease-in-out infinite;
}

.lock-indicator {
  background: #FF6B35;
}

/* ===== 关卡信息卡片改进 ===== */
.level-info-card {
  background: #FFFFFF;
  padding: 16rpx 20rpx;
  text-align: center;
  min-width: 140rpx;
  transform: rotate(-1deg);
}

.level-number {
  font-size: 24rpx;
  font-weight: 900;
  color: #FF6B35;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 4rpx;
}

.level-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  line-height: 1.2;
}

/* ===== 移除连接线元素 ===== */
.level-connector {
  display: none;
}

/* ===== 移除地图路径 ===== */
.map-path {
  display: none;
}

.path-canvas {
  display: none;
}

/* ===== 简化装饰元素 ===== */
.map-decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.decoration {
  position: absolute;
  font-size: 32rpx;
  opacity: 0.3;
  animation: floatGentle 4s ease-in-out infinite;
}

.cloud-1 {
  top: 10%;
  left: 15%;
  animation-delay: 0s;
}

.cloud-2 {
  top: 30%;
  right: 10%;
  animation-delay: 2s;
}

.tree-1 {
  bottom: 20%;
  left: 10%;
  animation-delay: 1s;
}

.tree-2 {
  bottom: 40%;
  right: 15%;
  animation-delay: 3s;
}

.mountain {
  top: 50%;
  left: 5%;
  animation-delay: 1.5s;
}

.castle {
  bottom: 10%;
  right: 5%;
  animation-delay: 2.5s;
}

/* ===== 关卡悬浮交互 ===== */
.level-node:hover .level-ring {
  animation: brutalistShake 0.3s ease;
}

.level-node:active {
  transform: scale(0.95);
}

.level-current:hover {
  animation: none;
  transform: scale(1.1) rotate(2deg);
}

/* ===== 关卡预览弹窗保持原样 ===== */
.level-preview-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.level-preview-overlay.show {
  opacity: 1;
  visibility: visible;
}

.level-preview-card {
  background: #FFFFFF;
  border: 8rpx solid #000000;
  box-shadow: 16rpx 16rpx 0 #4ECDC4;
  margin: 40rpx;
  max-width: 600rpx;
  width: 90%;
  transform: rotate(-1deg) scale(0.9);
  transition: all 0.3s ease;
}

.level-preview-overlay.show .level-preview-card {
  transform: rotate(-1deg) scale(1);
}

.preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: #FFE66D;
  border-bottom: 4rpx solid #000000;
}

.preview-level-ring {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-icon {
  font-size: 40rpx;
}

.preview-close {
  width: 48rpx;
  height: 48rpx;
  background: #FF6B35;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 900;
  color: #FFFFFF;
  cursor: pointer;
}

.preview-content {
  padding: 40rpx 32rpx;
}

.preview-title {
  font-size: 48rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.preview-description {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.preview-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  text-align: center;
  background: #F8F8F8;
  border: 3rpx solid #000000;
  box-shadow: 3rpx 3rpx 0 #000000;
  padding: 20rpx 16rpx;
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 20rpx;
  font-weight: 700;
  color: #666666;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 900;
  color: #000000;
}

.preview-actions {
  padding: 0 32rpx 32rpx 32rpx;
}

.single-btn {
  width: 100%;
  background: #A8E6CF;
  border: 6rpx solid #000000;
  box-shadow: 8rpx 8rpx 0 #000000;
  padding: 24rpx;
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  transition: all 0.2s ease;
}

.single-btn:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 #000000;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.btn-icon {
  font-size: 32rpx;
}

/* ===== 动画定义 ===== */
@keyframes currentLevelPulse {
  0%, 100% {
    transform: scale(1.08) rotate(1deg);
  }
  50% {
    transform: scale(1.12) rotate(2deg);
  }
}

@keyframes iconPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}

@keyframes brutalistShake {
  0%, 100% {
    transform: translateX(0) rotate(0deg);
  }
  25% {
    transform: translateX(-3rpx) rotate(-1deg);
  }
  50% {
    transform: translateX(3rpx) rotate(1deg);
  }
  75% {
    transform: translateX(-2rpx) rotate(-0.5deg);
  }
}

@keyframes floatGentle {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-16rpx) scale(1.05);
  }
}

/* ===== 响应式设计 ===== */
@media (max-width: 480px) {
  /* 标题区域响应式 */
  .map-header {
    padding: 32rpx 24rpx;
    gap: 24rpx;
  }
  
  .header-decoration-top {
    gap: 32rpx;
    margin-bottom: 12rpx;
  }
  
  .deco-star {
    font-size: 40rpx;
  }
  
  .deco-compass {
    font-size: 56rpx;
  }
  
  .main-title {
    padding: 24rpx 36rpx;
    box-shadow: 12rpx 12rpx 0 #FF6B35;
  }
  
  .title-text {
    font-size: 56rpx;
    letter-spacing: 3rpx;
    margin-bottom: 6rpx;
  }
  
  .title-english {
    font-size: 24rpx;
    letter-spacing: 1rpx;
  }
  
  .subtitle {
    padding: 16rpx 24rpx;
    gap: 12rpx;
    box-shadow: 6rpx 6rpx 0 #000000;
  }
  
  .subtitle-text {
    font-size: 26rpx;
    letter-spacing: 1rpx;
  }
  
  .subtitle-icon {
    font-size: 28rpx;
  }
  
  .header-decoration-bottom {
    gap: 20rpx;
    margin-top: 12rpx;
  }
  
  .deco-line {
    width: 60rpx;
    height: 5rpx;
  }
  
  .deco-gem {
    font-size: 36rpx;
  }
  
  /* 关卡区域响应式 */
  .levels-container {
    gap: 32rpx 24rpx;
    padding: 32rpx 16rpx;
  }
  
  .level-ring {
    width: 100rpx;
    height: 100rpx;
    border-width: 5rpx;
  }
  
  .level-icon {
    font-size: 44rpx;
  }
  
  .level-info-card {
    min-width: 120rpx;
    padding: 12rpx 16rpx;
  }
  
  .level-name {
    font-size: 24rpx;
  }
  
  .level-number {
    font-size: 20rpx;
  }
}