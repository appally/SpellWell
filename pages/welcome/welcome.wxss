/* pages/welcome/welcome.wxss */
/* Neo-Brutalism简化启动页 - 优化视觉复杂度 */
/* 设计原则: 单一焦点 + 强烈对比 + 简洁布局 + 儿童友好 */

/* ===== 基础页面样式 ===== */
.welcome-page {
  min-height: 100vh;
  background: #F8F6F0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
}

/* 丰富的背景纹路设计 */
.welcome-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    /* 主要几何纹理 */
    radial-gradient(circle at 25% 25%, #FFE66D 1px, transparent 1px),
    radial-gradient(circle at 75% 75%, #4ECDC4 1px, transparent 1px),
    /* 对角线条纹 */
    linear-gradient(45deg, transparent 40%, #A8E6CF 40%, #A8E6CF 42%, transparent 42%),
    linear-gradient(-45deg, transparent 58%, #FF6B35 58%, #FF6B35 60%, transparent 60%),
    /* 网格纹理 */
    linear-gradient(90deg, #F4A6A6 0.5px, transparent 0.5px),
    linear-gradient(0deg, #7FB3D3 0.5px, transparent 0.5px),
    /* 基础渐变背景 */
    linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 50%, #FFFFFF 100%);
  background-size: 
    40px 40px,
    40px 40px,
    60px 60px,
    60px 60px,
    20px 20px,
    20px 20px,
    100% 100%;
  background-position:
    0 0,
    20px 20px,
    0 0,
    30px 30px,
    0 0,
    0 0,
    0 0;
  opacity: 0.08;
  pointer-events: none;
  z-index: 0;
  animation: backgroundShift 20s ease-in-out infinite;
}

/* 背景动画效果 */
@keyframes backgroundShift {
  0%, 100% { 
    background-position:
      0 0,
      20px 20px,
      0 0,
      30px 30px,
      0 0,
      0 0,
      0 0;
  }
  50% { 
    background-position:
      10px 10px,
      30px 30px,
      15px 15px,
      45px 45px,
      5px 5px,
      5px 5px,
      0 0;
  }
}



/* ===== 主卡片容器 ===== */
.main-card {
  background: #FFFFFF;
  border: 12rpx solid #000000;
  box-shadow: 20rpx 20rpx 0 #FF6B35;
  padding: 80rpx 60rpx;
  text-align: center;
  transform: rotate(-1deg);
  position: relative;
  z-index: 1;
  max-width: 600rpx;
  width: 100%;
}

/* ===== 核心内容区域 ===== */
.hero-section {
  margin-bottom: 60rpx;
}

/* ===== APP LOGO样式 ===== */
.app-logo {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-image {
  width: 200rpx;
  height: 200rpx;
  border: 8rpx solid #000000;
  box-shadow: 12rpx 12rpx 0 #4ECDC4;
  border-radius: 24rpx;
  background: #FFFFFF;
  padding: 16rpx;
  animation: brutalistFloat 3s ease-in-out infinite;
  filter: drop-shadow(8rpx 8rpx 0 rgba(0,0,0,0.2));
}

/* 清爽版主标题 - 移除边框阴影，保持Neo-Brutalism核心特征 */
.main-title {
  font-size: 72rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 6rpx;
  display: inline-block;
  transform: rotate(1deg);
  text-shadow: 4rpx 4rpx 0 #4ECDC4;
  line-height: 1.1;
  position: relative;
}

/* 清爽版副标题 - 简洁设计，突出层次感 */
.subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
  display: inline-block;
  transform: rotate(-1deg);
  text-transform: none;
  letter-spacing: 1rpx;
  margin-bottom: 50rpx;
  position: relative;
  opacity: 0.9;
}

/* ===== 学习元素动画 - 教育主题设计 ===== */
.learning-elements {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.learning-item {
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  box-shadow: 4rpx 4rpx 0 #4ECDC4;
  animation: learningFloat 3s ease-in-out infinite;
  transform-origin: center;
  transition: all 0.3s ease;
}

/* 字母样式 */
.letter-a, .letter-b, .letter-c {
  background: #FFE66D;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  min-width: 60rpx;
  text-align: center;
}

/* 图标样式 */
.book-icon, .pencil-icon {
  background: #A8E6CF;
  font-size: 32rpx;
}

/* 动画延迟 */
.learning-item:nth-child(1) { animation-delay: 0s; }
.learning-item:nth-child(2) { animation-delay: 0.4s; }
.learning-item:nth-child(3) { animation-delay: 0.8s; }
.learning-item:nth-child(4) { animation-delay: 1.2s; }
.learning-item:nth-child(5) { animation-delay: 1.6s; }

/* 悬停效果 */
.learning-item:hover {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 6rpx 6rpx 0 #FF6B35;
}

/* 学习元素浮动动画 */
@keyframes learningFloat {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-8rpx) rotate(2deg);
  }
  50% {
    transform: translateY(-4rpx) rotate(-1deg);
  }
  75% {
    transform: translateY(-12rpx) rotate(1deg);
  }
}

/* ===== 行动按钮 ===== */
.action-section {
  margin-bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.start-btn {
  background: #FF6B35;
  border: 8rpx solid #000000 !important;
  box-shadow: 10rpx 10rpx 0 #000000;
  padding: 32rpx 64rpx !important;
  font-size: 40rpx !important;
  font-weight: 900;
  color: #FFFFFF;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  transform: rotate(-2deg);
  transition: all 0.2s ease;
  text-shadow: 2rpx 2rpx 0 rgba(0,0,0,0.3);
  width: auto;
  min-height: 120rpx;
  position: relative;
  overflow: hidden;
  animation: breathingPulse 2s ease-in-out infinite, buttonGlow 3s ease-in-out infinite;
}

/* 呼吸动画效果 */
.breathing-btn {
  animation: breathingPulse 2s ease-in-out infinite;
}

.breathing-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: rippleEffect 2s ease-in-out infinite;
}

.start-btn:hover {
  animation: breathingPulse 1s ease-in-out infinite, brutalistShake 0.3s ease, buttonGlow 1.5s ease-in-out infinite;
  filter: brightness(1.1);
}

.start-btn:active {
  transform: rotate(-2deg) translate(5rpx, 5rpx);
  box-shadow: 5rpx 5rpx 0 #000000;
  filter: brightness(0.9);
  animation: none;
}

/* ===== 学习记录链接 - Neo-Brutalism风格 ===== */
.study-record-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #FFE66D;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  cursor: pointer;
  transition: all 0.2s ease;
  transform: rotate(1deg);
  position: relative;
  overflow: hidden;
}

.study-record-link:hover {
  transform: rotate(1deg) scale(1.02);
  box-shadow: 6rpx 6rpx 0 #000000;
}

.study-record-link:active {
  transform: rotate(1deg) translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 #000000;
}

.study-record-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  text-shadow: 1rpx 1rpx 0 rgba(255,255,255,0.3);
}

.study-record-arrow {
  font-size: 24rpx;
  color: #000000;
  transition: transform 0.3s ease;
  font-weight: 900;
}

.study-record-link:active .study-record-arrow {
  transform: translateX(4rpx);
}

/* ===== 底部制作信息 - 移到屏幕底部 ===== */
.footer-credits {
  position: fixed;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  font-weight: 700;
  color: #000000;
  background: #FFE66D;
  padding: 12rpx 24rpx;
  border: 3rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  z-index: 10;
  white-space: nowrap;
}

/* ===== 词库和服务提供方信息 ===== */
.service-info {
  position: fixed;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  z-index: 9;
}

.service-line {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 4rpx;
  font-weight: 400;
}

/* ===== Neo-Brutalism动画 ===== */
@keyframes brutalistBounce {
  0%, 100% {
    transform: scale(1) rotate(0deg);
  }
  25% {
    transform: scale(1.05) rotate(-2deg);
  }
  50% {
    transform: scale(0.95) rotate(1deg);
  }
  75% {
    transform: scale(1.02) rotate(-1deg);
  }
}

@keyframes brutalistFloat {
  0%, 100% {
    transform: translateY(0) rotate(-5deg);
  }
  25% {
    transform: translateY(-24rpx) rotate(-3deg);
  }
  50% {
    transform: translateY(-16rpx) rotate(-8deg);
  }
  75% {
    transform: translateY(-8rpx) rotate(-6deg);
  }
}

@keyframes brutalistShake {
  0%, 100% {
    transform: rotate(-2deg) translateX(0);
  }
  25% {
    transform: rotate(-1deg) translateX(-6rpx);
  }
  50% {
    transform: rotate(-3deg) translateX(6rpx);
  }
  75% {
    transform: rotate(-2deg) translateX(-3rpx);
  }
}

/* 呼吸动画 - 吸引用户点击 */
@keyframes breathingPulse {
  0%, 100% {
    transform: rotate(-2deg) scale(1);
    box-shadow: 10rpx 10rpx 0 #000000;
  }
  50% {
    transform: rotate(-2deg) scale(1.05);
    box-shadow: 15rpx 15rpx 0 #000000, 0 0 30rpx rgba(255, 107, 53, 0.6);
  }
}

/* 按钮发光动画 - 增强视觉吸引力 */
@keyframes buttonGlow {
  0%, 100% {
    filter: brightness(1) saturate(1);
  }
  25% {
    filter: brightness(1.1) saturate(1.2);
  }
  50% {
    filter: brightness(1.2) saturate(1.3);
  }
  75% {
    filter: brightness(1.1) saturate(1.2);
  }
}

/* 波纹效果 */
@keyframes rippleEffect {
  0% {
    width: 0;
    height: 0;
    opacity: 1;
  }
  50% {
    width: 200rpx;
    height: 200rpx;
    opacity: 0.5;
  }
  100% {
    width: 300rpx;
    height: 300rpx;
    opacity: 0;
  }
}

/* 星星浮动动画 */
@keyframes starFloat {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-20rpx) rotate(90deg);
  }
  50% {
    transform: translateY(-10rpx) rotate(180deg);
  }
  75% {
    transform: translateY(-15rpx) rotate(270deg);
  }
}

/* 宝石旋转动画 */
@keyframes gemSpin {
  0% {
    transform: rotate(0deg) scale(1);
  }
  25% {
    transform: rotate(90deg) scale(1.1);
  }
  50% {
    transform: rotate(180deg) scale(1);
  }
  75% {
    transform: rotate(270deg) scale(1.1);
  }
  100% {
    transform: rotate(360deg) scale(1);
  }
}

/* 副标题脉冲动画 */
@keyframes subtitlePulse {
  0%, 100% {
    transform: rotate(1deg) scale(1);
    opacity: 1;
  }
  50% {
    transform: rotate(1deg) scale(1.05);
    opacity: 0.9;
  }
}

/* 进度条光泽效果 */
@keyframes progressShine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* ===== 响应式设计 ===== */
@media (max-width: 480px) {
  .main-card {
    padding: 60rpx 40rpx;
    border-width: 8rpx;
    box-shadow: 12rpx 12rpx 0 #FF6B35;
  }
  
  .app-logo {
    margin-bottom: 24rpx;
  }
  
  .logo-image {
    width: 160rpx;
    height: 160rpx;
    padding: 12rpx;
    border: 6rpx solid #000000;
    box-shadow: 8rpx 8rpx 0 #4ECDC4;
  }
  
  .main-title {
    font-size: 48rpx;
    padding: 16rpx 32rpx;
    letter-spacing: 3rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
    padding: 12rpx 24rpx;
    letter-spacing: 1rpx;
  }
  
  .start-btn {
    font-size: 32rpx !important;
    padding: 24rpx 48rpx !important;
    min-height: 100rpx;
  }
  
  .learning-elements {
    gap: 16rpx;
    margin-bottom: 20rpx;
  }
  
  .learning-item {
    font-size: 28rpx;
    padding: 8rpx 12rpx;
    min-width: 48rpx;
  }
  

  
  .footer-credits {
    font-size: 20rpx;
    padding: 8rpx 16rpx;
    bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
  
  .service-info {
    bottom: calc(80rpx + env(safe-area-inset-bottom));
  }
  
  .service-line {
    font-size: 18rpx;
  }
}

/* ===== 特殊效果 ===== */
.main-card::after {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF6B35;
  border: 4rpx solid #000000;
  transform: rotate(45deg);
  z-index: -1;
}