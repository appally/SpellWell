<!-- pages/welcome/welcome.wxml -->
<!-- Neo-Brutalism 简化启动页 - 减少视觉复杂度 -->

<!-- 主启动页面 -->
<view class="welcome-page" wx:if="{{showWelcome}}">
  <view class="main-card">
    
    <!-- 核心内容区 -->
    <view class="hero-section">
      <!-- APP LOGO -->
      <view class="app-logo">
        <image src="/images/logo.png" class="logo-image" mode="aspectFit"></image>
      </view>
      
      <!-- 主标题 -->
      <view class="main-title">单词小超人</view>
      
      <!-- 副标题 -->
      <view class="subtitle">我的假期单词大冒险</view>
      
      <!-- 学习元素动画 -->
      <view class="learning-elements">
        <view class="learning-item letter-a">A</view>
        <view class="learning-item book-icon">📚</view>
        <view class="learning-item letter-b">B</view>
        <view class="learning-item pencil-icon">✏️</view>
        <view class="learning-item letter-c">C</view>
      </view>
    </view>
    
    <!-- 行动按钮 -->
    <view class="action-section">
      <button class="start-btn breathing-btn" bindtap="onStartAdventure">
        🚀 开始冒险
      </button>
      
      <!-- 学习记录链接 -->
      <view class="study-record-link" bindtap="onViewStatistics">
        <text class="study-record-text">学习记录</text>
        <text class="study-record-arrow">→</text>
      </view>
    </view>
    
  </view>
  
  
  <!-- 底部制作信息 - 移到屏幕底部 -->
  <view class="footer-credits">
    Ethan & Dad · Made with ❤️
  </view>
  
  <!-- 词库和服务提供方信息 -->
  <view class="service-info">
    <view class="service-line">内容由锦一附小 & 阿里Qwen提供</view>
  </view>
</view>