  text-shadow: 0 2rpx 4rpx rgba(231, 76, 60, 0.3) !important;
  animation: letterShake 0.5s ease-in-out !important;
}

@keyframes letterShake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-2rpx); }
  75% { transform: translateX(2rpx); }
}

.cursor {
  width: 3rpx;
  height: 60rpx;
  background: #667eea;
  animation: blink 1s infinite;
  margin-left: 8rpx;
  align-self: center;
}

