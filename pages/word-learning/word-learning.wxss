  font-weight: 700;
  color: #1976D2;
  font-family: 'Comic Sans MS', 'PingFang SC', cursive, sans-serif;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  border: 2rpx solid #42A5F5;
  display: inline-block;
  margin-top: 8rpx;
}