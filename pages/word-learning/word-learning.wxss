/* 字母输入时的闪烁效果 */
.answer-letter::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, transparent 30%, rgba(76, 205, 196, 0.3) 50%, transparent 70%);
  border-radius: 10rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.answer-letter.correct {
  background: linear-gradient(135deg, #4ECDC4 0%, #7FDEEA 50%, #A8E6CF 100%);
  color: #FFFFFF;
  text-shadow: 3rpx 3rpx 0 #000000, 0 0 15rpx rgba(255, 255, 255, 0.3);
  animation: correctLetterPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  box-shadow: 6rpx 6rpx 0 #2C3E50, 0 0 30rpx rgba(76, 205, 196, 0.5), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.answer-letter.correct::before {
  opacity: 1;
  animation: successGlow 0.6s ease;
}

.answer-letter.wrong {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E8E 50%, #FFB3B3 100%);
  color: #FFFFFF;
  text-shadow: 3rpx 3rpx 0 #000000, 0 0 15rpx rgba(255, 255, 255, 0.3);
  animation: wrongLetterShake 0.6s ease;
  box-shadow: 6rpx 6rpx 0 #2C3E50, 0 0 30rpx rgba(255, 107, 53, 0.5), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

