  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-right: 15rpx solid #FFB74D;
}

.sentence-simple-text::after {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 32rpx;
  width: 0;
  height: 0;
  border-top: 13rpx solid transparent;
  border-bottom: 13rpx solid transparent;
