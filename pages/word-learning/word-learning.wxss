/* 儿童友好的反馈弹窗设计 */
.feedback-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8E1 100%);
  border-radius: 40rpx;
  padding: 60rpx 48rpx;
  text-align: center;
  width: 85%;
  max-width: 540rpx;
  transform: scale(0.7) rotate(-5deg);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.15);
  border: 4rpx solid #FFD54F;
  position: relative;
  overflow: hidden;
}

.feedback-overlay.show .feedback-card {
  transform: scale(1) rotate(0deg);
}

.feedback-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  transform: rotate(45deg);
  animation: shimmer 2s infinite;
}

.feedback-icon {
  font-size: 120rpx;
  margin-bottom: 28rpx;
  animation: celebrationPulse 1.5s infinite;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.feedback-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #E65100;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', -apple-system, sans-serif;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(230, 81, 0, 0.2);
}

.feedback-message {
  font-size: 32rpx;
  color: #FF6B35;
  margin-bottom: 20rpx;
  font-weight: 600;
  line-height: 1.5;
}

.feedback-word {
