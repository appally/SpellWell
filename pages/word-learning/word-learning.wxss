  font-weight: 600;
  color: #000000;
}

/* 自动跳转提示 */
.auto-redirect {
  margin-bottom: 24rpx;
  text-align: center;
}

.redirect-text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.redirect-progress {
  width: 100%;
  height: 8rpx;
  background: #E8E8E8;
  border: 2rpx solid #000000;
  border-radius: 4rpx;
  overflow: hidden;
}

.redirect-bar {
  height: 100%;
  background: linear-gradient(90deg, #4ECDC4 0%, #A8E6CF 100%);
  transition: width 1s linear;
}

/* 返回按钮 */
.celebration-button {
  background: #FF6B35;
  border: 4rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
  cursor: pointer;
  margin: 0 auto;
  min-width: 280rpx;
  white-space: nowrap;
}

.celebration-button:active {
  transform: translate(3rpx, 3rpx);
  box-shadow: 3rpx 3rpx 0 #000000;
}

.button-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.button-icon {
  font-size: 32rpx;
}

/* 动画关键帧 */
@keyframes fireworkExplode {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(20);
    opacity: 0.8;
  }
  100% {
    transform: scale(40);
    opacity: 0;
  }
}

@keyframes starFall {
  0% {
    transform: translateY(-100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

@keyframes trophyBounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-20rpx) scale(1.05);
  }
}

@keyframes glowPulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.6;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 0.8;
  }
}

@keyframes titleShine {
  0%, 100% {
    text-shadow: 3rpx 3rpx 0 #000000;
  }
  50% {
    text-shadow: 3rpx 3rpx 0 #000000, 0 0 20rpx #FFE66D;
  }
}

@keyframes starPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* ===== 简化动画关键帧 ===== */
@keyframes simpleCelebrationAppear {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes simpleScale {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes simpleGlow {
  0% {
    transform: scale(0.9);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* ===== 响应式设计 ===== */
@media (max-width: 480px) {
  .word-display {
    gap: 12rpx;
  }
  
  .word-text {
    font-size: 52rpx;
    padding: 12rpx 24rpx;
  }
  
  .word-phonetic {
    font-size: 20rpx;
  }
  
  .word-meaning {
    font-size: 32rpx;
    padding: 12rpx 20rpx;
  }
  
  .dictation-display .word-meaning-primary {
    font-size: 40rpx;
    padding: 16rpx 24rpx;
  }
  
  .answer-letter {
    width: 44rpx;
    height: 44rpx;
    font-size: 26rpx;
  }
  
  .letter-btn {
    width: 60rpx;
    height: 60rpx;
    font-size: 26rpx;
  }
  
  .btn {
    height: 72rpx;
    font-size: 24rpx;
  }
  
  .btn-learned {
    font-size: 26rpx;
    box-shadow: 4rpx 4rpx 0 #000000;
  }
  
  .btn-learned::before {
    width: 24rpx;
    height: 24rpx;
    font-size: 18rpx;
    top: -6rpx;
    right: -6rpx;
  }
  
  .btn-learned:hover {
    box-shadow: 5rpx 5rpx 0 #000000;
  }
  
  /* 庆祝弹窗响应式 */
  .celebration-card {
    padding: 24rpx;
    margin: 12rpx;
    gap: 24rpx;
  }
  
  .main-content {
    flex-direction: column;
    gap: 24rpx;
    text-align: center;
  }
  
  .left-section,
  .right-section {
    flex: none;
    width: 100%;
  }
  
  .bottom-content {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .trophy-icon {
    font-size: 80rpx;
  }
  
  .title-main {
    font-size: 36rpx;
  }
  
  .title-sub {
    font-size: 24rpx;
  }
  
  .score-number {
    font-size: 40rpx;
  }
  
  .star-item {
    font-size: 32rpx;
  }
  
  .accuracy-value {
    font-size: 32rpx;
  }
  
  .reward-text {
    font-size: 20rpx;
  }
  
  .reward-items {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .reward-item {
    min-width: auto;
    width: 100%;
  }
  
  .button-text {
    font-size: 24rpx;
  }
  
  .feedback-title {
    font-size: 32rpx;
  }
  
  .feedback-word {
    font-size: 36rpx;
    padding: 12rpx 20rpx;
  }
}

/* 勾选标记出现动画 */
@keyframes checkmarkAppear {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  70% {
    transform: scale(1.2) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

/* 新增：微妙的脉冲动画 - 提示单词可点击 */
@keyframes subtlePulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 4rpx 4rpx 0 #000000;
  }
  50% {
    transform: scale(1.01);
    box-shadow: 5rpx 5rpx 0 #000000;
  }
}

/* 新增：微妙的呼吸动画 - 提示例句可点击 */
@keyframes subtleBreath {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.005);
    opacity: 0.95;
  }
}

/* 新增：音频加载动画 */
@keyframes audioLoading {
  0%, 100% {
    background: #FFD93D;
    transform: scale(1);
  }
  50% {
    background: #FFC107;
    transform: scale(1.02);
  }
}

/* 新增：例句加载动画 */
@keyframes sentenceLoading {
  0%, 100% {
    background: #FFD93D;
    border-color: #000000;
  }
  50% {
    background: #FFC107;
    border-color: #333333;
  }
}

/* 新增：声波动画 */
@keyframes soundWave {
  0%, 100% {
    transform: scale(1);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.3);
    opacity: 1;
  }
}

/* 新增：音符动画 */
@keyframes musicNote {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-2rpx) scale(1.1);
    opacity: 1;
  }
}
