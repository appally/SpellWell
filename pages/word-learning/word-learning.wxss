/* 📚 例句容器样式 */
.sentence-container {
  position: relative;
  display: inline-block;
  width: 100%;
}

/* 🎯 例句中的动画单词样式 */
.animated-sentence-word {
  background: linear-gradient(135deg, #4ECDC4 0%, #7FDEEA 50%, #A8E6CF 100%);
  color: #FFFFFF;
  font-weight: 900;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  border: 2rpx solid #000000;
  box-shadow: 2rpx 2rpx 0 #2C3E50, 0 0 15rpx rgba(76, 205, 196, 0.6);
  text-shadow: 1rpx 1rpx 0 #000000;
  animation: wordAppear 2s ease-out;
  display: inline;
}

/* 💥 整体爆炸容器动画关键帧 */
@keyframes explodeContentDisappear {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  20% {
    transform: scale(1.1);
    opacity: 0.9;
  }
  100% {
    transform: scale(1.2);
    opacity: 0.3;
  }
}

/* 💥 字母散射动画关键帧 */
@keyframes letterScatter {
  0% {
    transform: scale(1) rotate(0deg) translate(0, 0);
    opacity: 1;
    background: linear-gradient(135deg, #FFFFFF 0%, #FAFBFC 50%, #F8F9FA 100%);
  }
  25% {
    transform: scale(1.2) rotate(15deg) translate(var(--scatter-x, 20rpx), var(--scatter-y, -30rpx));
    opacity: 0.8;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8E8E 50%, #FFB3B3 100%);
    box-shadow: 0 0 20rpx rgba(255, 107, 53, 0.8), 0 0 40rpx rgba(255, 107, 53, 0.4);
  }
  50% {
    transform: scale(1.4) rotate(-25deg) translate(var(--scatter-x, 40rpx), var(--scatter-y, -60rpx));
    opacity: 0.6;
    background: linear-gradient(135deg, #FF4757 0%, #FF6B7A 50%, #FF8E8E 100%);
    box-shadow: 0 0 30rpx rgba(255, 71, 87, 0.9), 0 0 60rpx rgba(255, 71, 87, 0.5);
  }
  75% {
    transform: scale(0.8) rotate(40deg) translate(var(--scatter-x, 60rpx), var(--scatter-y, -80rpx));
    opacity: 0.3;
    background: linear-gradient(135deg, #FF3742 0%, #FF5E6B 50%, #FF7A85 100%);
    box-shadow: 0 0 15rpx rgba(255, 55, 66, 0.6), 0 0 30rpx rgba(255, 55, 66, 0.3);
  }
  100% {
    transform: scale(0) rotate(60deg) translate(var(--scatter-x, 80rpx), var(--scatter-y, -100rpx));
    opacity: 0;
    background: transparent;
    box-shadow: none;
  }
}

