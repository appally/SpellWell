/* AI Loading 动画 */
.ai-loading {
  text-align: center;
  padding: 80rpx 32rpx;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-robot {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: robotBounce 1.5s ease-in-out infinite;
}

.loading-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 32rpx;
  animation: textFade 2s ease-in-out infinite;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.loading-dots .dot {
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  animation: dotBounce 1.4s ease-in-out infinite both;
}

.loading-dots .dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dots .dot:nth-child(2) { animation-delay: -0.16s; }
.loading-dots .dot:nth-child(3) { animation-delay: 0s; }

@keyframes robotBounce {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-10rpx) scale(1.1); }
}

@keyframes textFade {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

@keyframes dotBounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 40% { 
    transform: scale(1);
  }
}

