/* pages/word-learning/word-learning.wxss */
/* Neo-Brutalism儿童APP设计系统 - 单词学习页面 */
/* 设计DNA: 大胆色彩 + 几何形状 + 高对比度 + 无圆角 + 强烈阴影 + 儿童友好 */

/* ===== 基础页面样式 ===== */
.page-scroll {
  height: 100vh;
  width: 100%;
}

.safe-area {
  min-height: 100vh;
  background: #FFFFFF;
  padding: 32rpx;
  box-sizing: border-box;
  position: relative;
}

/* 丰富的背景纹路设计 */
.safe-area::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    /* 主要几何纹理 */
    radial-gradient(circle at 25% 25%, #FFE66D 1px, transparent 1px),
    radial-gradient(circle at 75% 75%, #4ECDC4 1px, transparent 1px),
    /* 对角线条纹 */
    linear-gradient(45deg, transparent 40%, #A8E6CF 40%, #A8E6CF 42%, transparent 42%),
    linear-gradient(-45deg, transparent 58%, #FF6B35 58%, #FF6B35 60%, transparent 60%),
    /* 网格纹理 */
    linear-gradient(90deg, #F4A6A6 0.5px, transparent 0.5px),
    linear-gradient(0deg, #7FB3D3 0.5px, transparent 0.5px),
    /* 基础渐变背景 */
    linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 50%, #FFFFFF 100%);
  background-size: 
    40px 40px,
    40px 40px,
    60px 60px,
    60px 60px,
    20px 20px,
    20px 20px,
    100% 100%;
  background-position:
    0 0,
    20px 20px,
    0 0,
    30px 30px,
    0 0,
    0 0,
    0 0;
  opacity: 0.08;
  pointer-events: none;
  z-index: 0;
  animation: backgroundShift 20s ease-in-out infinite;
}

/* 背景动画效果 */
@keyframes backgroundShift {
  0%, 100% { 
    background-position:
      0 0,
      20px 20px,
      0 0,
      30px 30px,
      0 0,
      0 0,
      0 0;
  }
  50% { 
    background-position:
      10px 10px,
      30px 30px,
      15px 15px,
      45px 45px,
      5px 5px,
      5px 5px,
      0 0;
  }
}

/* ===== 优化后的进度条 ===== */
.progress-container {
  background: #4ECDC4;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #FF6B35;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.progress-header {
