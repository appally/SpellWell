/* pages/ai-explanation/ai-explanation.wxss */
/* Neo-Brutalism儿童APP设计系统 - AI讲解页面 */
/* 设计DNA: 大胆色彩 + 几何形状 + 高对比度 + 无圆角 + 强烈阴影 + 儿童友好 */

/* ===== 基础页面样式 ===== */
.page-scroll {
  height: 100vh;
  background: #FFFFFF;
}

.safe-area {
  padding: 32rpx;
  min-height: 100vh;
  position: relative;
}

/* 丰富的背景纹路设计 */
.safe-area::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    /* 主要几何纹理 */
    radial-gradient(circle at 25% 25%, #FFE66D 1px, transparent 1px),
    radial-gradient(circle at 75% 75%, #4ECDC4 1px, transparent 1px),
    /* 对角线条纹 */
    linear-gradient(45deg, transparent 40%, #A8E6CF 40%, #A8E6CF 42%, transparent 42%),
    linear-gradient(-45deg, transparent 58%, #FF6B35 58%, #FF6B35 60%, transparent 60%),
    /* 网格纹理 */
    linear-gradient(90deg, #F4A6A6 0.5px, transparent 0.5px),
    linear-gradient(0deg, #7FB3D3 0.5px, transparent 0.5px),
    /* 基础渐变背景 */
    linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 50%, #FFFFFF 100%);
  background-size: 
    40px 40px,
    40px 40px,
    60px 60px,
    60px 60px,
    20px 20px,
    20px 20px,
    100% 100%;
  background-position:
    0 0,
    20px 20px,
    0 0,
    30px 30px,
    0 0,
    0 0,
    0 0;
  opacity: 0.08;
  pointer-events: none;
  z-index: 0;
  animation: backgroundShift 20s ease-in-out infinite;
}

/* 背景动画效果 */
@keyframes backgroundShift {
  0%, 100% { 
    background-position:
      0 0,
      20px 20px,
      0 0,
      30px 30px,
      0 0,
      0 0,
      0 0;
  }
  50% { 
    background-position:
      10px 10px,
      30px 30px,
      15px 15px,
      45px 45px,
      5px 5px,
      5px 5px,
      0 0;
  }
}

/* ===== Neo-Brutalism错误状态 ===== */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  text-align: center;
  background: #FF6B35;
  border: 8rpx solid #000000;
  box-shadow: 12rpx 12rpx 0 #000000;
  padding: 60rpx 40rpx;
  transform: rotate(-2deg);
  position: relative;
  z-index: 1;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(6rpx 6rpx 0 rgba(0,0,0,0.3));
  animation: brutalistBounce 2s ease-in-out infinite;
}

.error-message {
  font-size: 36rpx;
  font-weight: 900;
  color: #FFFFFF;
  margin-bottom: 40rpx;
  text-shadow: 3rpx 3rpx 0 #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* ===== Neo-Brutalism简化单词卡片 - 紧凑版 ===== */
.word-simple-card {
  background: #4ECDC4;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #FF6B35;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 24rpx;
  transform: rotate(1deg);
  position: relative;
  z-index: 1;
  text-align: left;
}

.word-image {
  font-size: 90rpx;
  padding: 0 40rpx;
  filter: drop-shadow(2rpx 2rpx 0 rgba(0,0,0,0.2));
}

.word-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.word-text {
  font-size: 44rpx;
  font-weight: 900;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  background: #FFFFFF;
  padding: 12rpx 24rpx;
  border: 3rpx solid #000000;
  box-shadow: 3rpx 3rpx 0 #000000;
  transform: rotate(-1deg);
  margin-bottom: 6rpx;
}

.word-meaning {
  font-size: 32rpx;
  font-weight: 900;
  color: #FFFFFF;
  background: #FF6B35;
  padding: 12rpx 24rpx;
  border: 3rpx solid #000000;
  box-shadow: 3rpx 3rpx 0 #000000;
  transform: rotate(1deg);
  text-shadow: 1rpx 1rpx 0 #000000;
}

/* ===== Neo-Brutalism AI讲解容器 ===== */
.ai-explanation-container {
  position: relative;
  z-index: 1;
}

/* ===== Neo-Brutalism加载状态 ===== */
.ai-loading-section {
  text-align: center;
  padding: 60rpx 20rpx;
}

.loading-header {
  margin-bottom: 32rpx;
}

.loading-robot {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: brutalistSpin 2s linear infinite;
  filter: drop-shadow(6rpx 6rpx 0 rgba(0,0,0,0.2));
}

.loading-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  background: #FFE66D;
  padding: 16rpx 32rpx;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
  display: inline-block;
  transform: rotate(-2deg);
}

.loading-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 32rpx;
  background: #FFFFFF;
  padding: 16rpx 24rpx;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  display: inline-block;
  transform: rotate(1deg);
}

.loading-animation {
  display: flex;
  justify-content: center;
}

.loading-dots {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 24rpx;
  height: 24rpx;
  background: #FF6B35;
  border: 3rpx solid #000000;
  box-shadow: 3rpx 3rpx 0 #000000;
  transform: rotate(45deg);
  animation: brutalistBounce 1.4s ease-in-out infinite both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

.dot:nth-child(3) {
  animation-delay: 0s;
}

/* ===== Neo-Brutalism AI内容区域 ===== */
.ai-content-section {
  position: relative;
}



.ai-explanation-content {
  background: #FFFFFF;
  border: 6rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #FFE66D;
  padding: 60rpx 32rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.ai-explanation-content::before {
  content: '💡';
  position: absolute;
  top: -16rpx;
  left: 32rpx;
  font-size: 32rpx;
  background: #FFE66D;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0 #000000;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(15deg);
}

.explanation-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #000000;
  letter-spacing: 1rpx;
  display: block;
}

/* ===== Neo-Brutalism按钮样式 ===== */
.ai-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
  justify-content: center;
  flex-wrap: wrap;
}

/* Neo-Brutalism按钮基础样式 - 重新设计 */
.neo-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  border: 4rpx solid #000000;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  cursor: pointer;
  overflow: hidden;
  min-width: 180rpx;
  height: 80rpx;
  border-radius: 0;
}

.neo-btn-icon {
  font-size: 32rpx;
  filter: drop-shadow(1rpx 1rpx 0 rgba(0,0,0,0.2));
  transition: transform 0.25s ease;
}

.neo-btn-text {
  font-size: 26rpx;
  font-weight: 800;
  color: #000000;
  text-shadow: 1rpx 1rpx 0 rgba(255,255,255,0.3);
  white-space: nowrap;
}

/* 次要按钮样式 */
.neo-btn-secondary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  box-shadow: 6rpx 6rpx 0 #000000;
  transform: rotate(1deg);
}

.neo-btn-secondary:hover {
  transform: rotate(1deg) translateY(-2rpx);
  box-shadow: 8rpx 8rpx 0 #000000;
}

.neo-btn-secondary:hover .neo-btn-icon {
  transform: rotate(15deg) scale(1.1);
}

.neo-btn-secondary:active {
  transform: rotate(1deg) translate(3rpx, 3rpx);
  box-shadow: 3rpx 3rpx 0 #000000;
}

/* 主要按钮样式 - 突出"学会了" */
.neo-btn-primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #7FDBDA 100%);
  box-shadow: 8rpx 8rpx 0 #000000;
  transform: rotate(-1deg) scale(1.05);
  border-width: 5rpx;
  position: relative;
}

.neo-btn-primary::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, #FFE66D, transparent, #A8E6CF, transparent);
  background-size: 200% 200%;
  z-index: -1;
  animation: borderGlow 2s ease-in-out infinite;
}

.neo-btn-primary:hover {
  transform: rotate(-1deg) scale(1.08) translateY(-3rpx);
  box-shadow: 12rpx 12rpx 0 #000000;
}

.neo-btn-primary:hover .neo-btn-icon {
  transform: scale(1.2) rotate(-10deg);
}

.neo-btn-primary:active {
  transform: rotate(-1deg) scale(1.05) translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 #000000;
}

/* 高亮效果 - 简化版 */
.neo-btn-highlight {
  position: relative;
}

.neo-btn-sparkle {
  position: absolute;
  top: 6rpx;
  right: 8rpx;
  font-size: 20rpx;
  opacity: 0.8;
  animation: sparkleSimple 3s ease-in-out infinite;
}

/* 动画效果 - 优化版 */
@keyframes borderGlow {
  0%, 100% { 
    background-position: 0% 50%;
    opacity: 0.6;
  }
  50% { 
    background-position: 100% 50%;
    opacity: 0.9;
  }
}

@keyframes sparkleSimple {
  0%, 100% { 
    transform: scale(1) rotate(0deg);
    opacity: 0.6;
  }
  50% { 
    transform: scale(1.1) rotate(180deg);
    opacity: 1;
  }
}

/* ===== Neo-Brutalism小贴士 ===== */


/* ===== Neo-Brutalism动画关键帧 ===== */
@keyframes brutalistBounce {
  0%, 100% {
    transform: scale(1) rotate(0deg);
  }
  25% {
    transform: scale(1.05) rotate(-2deg);
  }
  50% {
    transform: scale(0.95) rotate(1deg);
  }
  75% {
    transform: scale(1.02) rotate(-1deg);
  }
}

@keyframes brutalistShake {
  0%, 100% {
    transform: translateX(0) rotate(0deg);
  }
  25% {
    transform: translateX(-4rpx) rotate(-1deg);
  }
  50% {
    transform: translateX(4rpx) rotate(1deg);
  }
  75% {
    transform: translateX(-2rpx) rotate(-0.5deg);
  }
}

@keyframes brutalistSpin {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(90deg) scale(1.1);
  }
  50% {
    transform: rotate(180deg);
  }
  75% {
    transform: rotate(270deg) scale(0.9);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* ===== 响应式设计 ===== */
@media (max-width: 480px) {
  .word-text {
    font-size: 44rpx;
    padding: 8rpx 16rpx;
  }
  
  .word-meaning {
    font-size: 32rpx;
    padding: 12rpx 20rpx;
  }
  
  .loading-title {
    font-size: 32rpx;
    padding: 12rpx 24rpx;
  }
  
  .ai-title {
    font-size: 28rpx;
  }
  
  .explanation-text {
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  .btn {
    height: 80rpx;
    font-size: 28rpx;
  }
  
  .ai-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .btn {
    flex: none;
  }
}