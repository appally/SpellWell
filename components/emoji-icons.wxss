/* 安卓兼容性备用方案 */
@media screen and (-webkit-min-device-pixel-ratio: 0) {
  /* 针对安卓设备的备用文字方案 */
  .emoji-party.fallback::before { content: "[庆祝]"; }
  .emoji-star.fallback::before { content: "★"; }
  .emoji-sparkles.fallback::before { content: "✦"; }
  .emoji-glowing-star.fallback::before { content: "☆"; }
  .emoji-trophy.fallback::before { content: "[奖杯]"; }
  .emoji-gift.fallback::before { content: "[礼物]"; }
  .emoji-medal.fallback::before { content: "[奖牌]"; }
  .emoji-lightning.fallback::before { content: "⚡"; }
  .emoji-map.fallback::before { content: "[地图]"; }
  .emoji-share.fallback::before { content: "[分享]"; }
  .emoji-book.fallback::before { content: "[书本]"; }
  .emoji-bulb.fallback::before { content: "[灯泡]"; }
  .emoji-speaker.fallback::before { content: "♪"; }
  .emoji-smile.fallback::before { content: "☺"; }
  .emoji-gem.fallback::before { content: "◆"; }
  .emoji-dizzy.fallback::before { content: "✧"; }
}

/* 检查标记 */
.emoji-check {
  color: #2E7D32;
  font-weight: bold;
  font-size: inherit;
}

.emoji-check::before {
  content: "✓";
  font-family: system-ui, -apple-system, sans-serif;
}

/* 动画兼容性 */
.emoji-icon.animate {
  animation-duration: inherit;
  animation-timing-function: inherit;
  animation-iteration-count: inherit;
}

/* 尺寸变体 */
.emoji-icon.small { font-size: 0.8em; }
.emoji-icon.medium { font-size: 1em; }
.emoji-icon.large { font-size: 1.2em; }
.emoji-icon.xl { font-size: 1.5em; }
.emoji-icon.xxl { font-size: 2.5em; }
.emoji-icon.xxxl { font-size: 3em; }

/* 颜色变体 */
.emoji-icon.primary { color: var(--color-primary, #4ECDC4); }
.emoji-icon.secondary { color: var(--color-secondary, #FFD93D); }
.emoji-icon.success { color: var(--color-success, #2E7D32); }
.emoji-icon.warning { color: var(--color-warning, #FFB74D); }
.emoji-icon.error { color: var(--color-error, #FF6B6B); }